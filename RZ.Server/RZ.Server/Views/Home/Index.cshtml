@{
    ViewData["Title"] = "RuckZuck.tools";
}
<br />
<div class="jumbotron">
    <h1 class="display-4">RuckZuck v2 (PREVIEW !!!)</h1>
    <p class="lead">Software Package Manager for Windows, a quick way to install and update Software... </p>
</div>
<hr class="my-4">
<p>This page is under construction...</p>
<hr class="my-4">
<div>
    <h4>Latest (5) repository changes:</h4>
    <form>
        @foreach (var SW in ViewBag.LatestItems)
        {
            <div class="form-group row">
                <div class="row col-lg-5">
                    <div class="col-lg-1">
                        <img src=@SW.IconURL width="32px" height="32px" />
                    </div>
                    <div class="col-lg-11">
                        <div class="col-lg-12" style="vertical-align:top; height:16px">
                            <label>@SW.Shortname</label>
                            <label>@SW.Version</label>
                        </div>
                        <div class="col-lg-12" style="height:8px; vertical-align:top">
                            <small>(@SW.Date)</small>
                        </div>
                    </div>
                </div>
            </div>

        }
    </form>
</div>
